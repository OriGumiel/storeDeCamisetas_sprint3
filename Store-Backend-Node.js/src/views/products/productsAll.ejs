<%- include('../partials/head') %> 
<link rel="stylesheet" href="/stylesheets/productos.css">
</head>

<body>
    
<%- include('../partials/header') %> 

	<!-- ultima visita -->
		<!-- ultima visita -->
		<div class="container products-wrapper">
			<div class="products-container">
				<!-- Show the "visited" products -->
				<% if (locals.isLogged) { %>
					<% if(locals.userLogged.user_type==="admin") { %>
					<section class="product-box-addProduct">
						<a href="/products/newproduct">
							<figure class="product-box-addProduct-image">
							<i class="fas fa-plus-circle"></i>
							</figure>
							<article class="product-box-addProduct-data">
								<h2> AGREGAR NUEVO PRODUCTO </h2>
							</article>
						</a>
					</section>
					<%}%>
				<%}%>
				<% for( let index = 0; index < allProducts.length; index++ ) { %>
				<section class="product-box">
					<a href="/products/detalle/<%= allProducts[index].id%>">
						<figure class="product-box_image">
							<img src="/images/products/<%= allProducts[index].product_images[0].image%>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<p><%= allProducts[index].name %></p>
							<h2> $<%= allProducts[index].price %> </h2>
							<p><%= allProducts[index].description %></p>
							<!-- <i class="fas fa-truck"></i> -->
						</article>
					</a>
				</section>
				<% } %>
				
			</div>
		</div>
	<!-- /ultima visita -->

<%- include('../partials/footer') %> 

</body>

</html>