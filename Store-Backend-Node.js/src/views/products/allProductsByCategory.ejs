<%- include('../partials/head') %> 
<link rel="stylesheet" href="/stylesheets/productos.css">
</head>

<body>
    
<%- include('../partials/header') %> 

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			
			<% for( let index = 0; index < allProductsByCategory.length; index++ ) { %>
				
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detalle/<%= allProductsByCategory[index].id%>">
							<figure class="product-box_image">
								<img src="/images/products/<%= allProductsByCategory[index].product_images[0].image%>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2> $<%= allProductsByCategory[index].price %> </h2>
								<span><%= allProductsByCategory[index].discount %>% OFF</span>
								<p><%= allProductsByCategory[index].name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
				<% } %>
		</div>
	</div>
	<!-- /ultima visita -->

<%- include('../partials/footer') %> 

</body>

</html>