
<%- include('../partials/head') %>
      
<body>

<%- include('../partials/header') %>

    <main>
        <h1>Registrate acá</h1>

        <div class="col-8 mx-auto bg-light ">
          <!-- Aquí muestro los errores --->
          <% if(typeof(errors) != 'undefined'){%>
             <ul class="alert alert-danger">
                <% errors.forEach(error => { %>
                   <li><%= error.msg%></li>
                <%});%>
              </ul>
          <%}%>    
          <!----Fin mostrar errores--------->

        <form action="/register" method="post" enctype="multipart/form-data">
           <ul>
             <p>Unite a Store de camisetas y accede a increibles descuentos!</p>
              <li>
                <label for="name">Nombre:</label>
                <input type="text" id="first_name" name="first_name">
              </li>
                <br>
              <li>
                <label for="surname">Apellido:</label>
                <input type="text" id="last_name" name="last_name">
              </li>
                <br>
              <li>
                <label for="mail">Correo electrónico:</label>
                <input type="email" id="email" name="email">
              </li>
                <br>
              <li>
                <label for="password">Crear contraseña:</label>
                <input type="password" id="password" name="password">
              </li>
                <br>
                <div class="custom-file">
                  <input type="file"   name="user-avatar"  placeholder="Debes eligir tu avatar...">
              </div>   
           </ul>
           <li class="button">
            <button type="submit">Registrarse</button>
          </li>
        </form>
    </main>

<%- include('../partials/footer') %> 

</body>

</html>



